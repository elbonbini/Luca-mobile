    height: "45dp",
    borderColor: "#000000",
    borderWidth: 1,
    backgroundColor: "#ffffff",
    opacity: 0.7
}

'#labelCode' : {
    color: "#000000",
    left: "2%",
    width: "15%",
    top: 0,

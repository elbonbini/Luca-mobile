}

'#pickerLzs' : {
  borderColor : "#000000",
  borderWidth : 1,
  center : { x : "50%" },
  width : "450%",
  top : "45dp",
  type : Titanium.UI.PICKER_TYPE_PLAIN,
  selectionIndicator : true,
  useSpinner : true,
  opacity : 0.7
}

'.gid': {
    textAlign: "right",
    width: 20,
    visible: false
}

'.chooseLz': {
    left: "15%",
    width : "85%",
    right: 0,
